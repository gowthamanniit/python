from tkinter import *
root = Tk()
v = IntVar()
Label(root,
    text="""Select your gender:""",
    justify = LEFT,
    padx = 20).pack()
Radiobutton(root,
    text="male",
    padx = 20,
    variable=v,
    value=1).pack(anchor=W)
Radiobutton(root,
    text="female",
    padx = 20,
    variable=v,
    value=2).pack(anchor=W)
mainloop()
